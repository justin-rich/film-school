<div id="director">  
  <ul id="films" class="<%= numColumns(@films.size) %>">  
    <% @films.each do |film| %>
    <li class="film">
      <div class="poster">
          <a href="/search/<%= film.netflix_id %>">
          <img title="<%= film.title %>" src="<%= film.box_art(imgSize(@films.size)) %>" />
        </a>
      </div>
    </li>
    <% end %>
  </ul>
  
  <h2 class="title"><%= @director.name %></h2>
  
  
  <% if @director.bio %>
    <div class="bio">
      <%= @director.bio %>
    </div>  
  <% end %>
</div>

<%= partial :'../shared/search' %>
<%= partial :'../shared/menu' %>
<%= partial :'../shared/controls' %>

<script type="text/javascript" charset="utf-8">  	
	$(document).keydown(function(e){		
    switch (e.keyCode) { 
    case 192: {
      menuModalBox();
      break;
    }
    case 191: {
      searchModalBox();
      break;
    }
  }});
</script>